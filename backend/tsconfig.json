{
    "compilerOptions": {
        "module": "commonjs",
        "target": "esnext",
        "moduleResolution": "Node",
        "sourceMap": true,
        "outDir": "dist",
        "allowJs": true,
        "lib": [
            "dom",
            "es6"
        ],
        "rootDir": ".",
        "esModuleInterop": true,
        "paths": {
            "@shared/*": [
                "../shared/src/*"
            ]
        }
    },
    "typeRoots": [
        "./nodemodules/@types",
        "./src/types"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ],
    "include": [
        "src/**/*.ts",
        "tests/**/*.spec.ts"
    ],
    "files": [
        "src/index.ts"
    ],
    "references": [
        {
            "path": "../shared"
        }
    ]
}